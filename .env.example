# Apache Superset Environment Configuration
# Copy this file to .env and customize the values

# Security
SECRET_KEY=CHANGE_ME_TO_A_COMPLEX_RANDOM_SECRET

# Database Configuration
# SQLite (default for development)
DATABASE_URL=sqlite:////app/superset.db
# PostgreSQL example:
# DATABASE_URL=postgresql://superset:superset@postgres:5432/superset
# MySQL example:
# DATABASE_URL=mysql://superset:superset@mysql:3306/superset

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://redis:6379/0

# CORS Configuration
CORS_ORIGINS=*

# Email/SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=25
SMTP_USER=
SMTP_PASSWORD=
SMTP_MAIL_FROM=superset@example.com

# Mapbox API Key (optional, for map visualizations)
MAPBOX_API_KEY=

# Webdriver Type (for screenshots)
WEBDRIVER_TYPE=chrome

# SQL Lab Timeout (seconds)
SQLLAB_TIMEOUT=300

# Logging
LOG_LEVEL=INFO

# Localization
BABEL_DEFAULT_LOCALE=en

# Celery Configuration (optional)
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0
